@model QuizApp.Models.Quiz
<h2>@Model.Title</h2>
<form asp-controller="Quiz" asp-action="Submit" method="post">
    <input type="hidden" name ="id" value = "@Model.Id"/>
    @for (int i =0;i<Model.Questions.Count; i++)
    {
        <div>
            <p>
                @Model.Questions[i].Text
            </p>
            @for(int j=0;j<Model.Questions[i].Options.Count;j++)
            {
            <label>
                <input type ="radio" name="answers[@(i)]" value="@j"/>
                @Model.Questions[i].Options[j]
            </label><br/>
            }
        </div><hr/>

    }
    <a class="btn btn-warning mt-3" asp-controller="Quiz" asp-action="Index" asp-route-id="@Model.Id">
        Retake Quiz
    </a>
    <button class="btn btn-warning mt-3" type="submit">Submit</button>
</form>

